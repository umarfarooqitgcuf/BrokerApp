<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_image"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/green"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/ralewaylight"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/styleb"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="10dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textStyle="bold"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff" />
    <RelativeLayout
        android:id="@+id/relative_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_email"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <EditText
            android:id="@+id/login_user_password"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lock_create_page"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:background="@drawable/styleb"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/ralewaylight"
            android:layout_marginRight="20dp"
            android:inputType="textPassword"
            android:hint="Enter Password"
            />
        <TextView
            android:id="@+id/eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/eye1"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/ralewaylight"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_forgot_password"
        android:layout_width="wrap_content"
        android:fontFamily="@font/ralewaylight"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_password"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:text="Forgot Password?"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_forgot_password"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAllCaps="false"
        android:fontFamily="@font/ralewaylight"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/styleyellow"
        android:textSize="18sp"
        android:textColor="#fff"
        android:text="Sign In"
        />

    <TextView
        android:id="@+id/btn_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/ralewaylight"
        android:layout_marginLeft="15dp"
        android:layout_gravity="bottom"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:text=" New Account?"
        android:textAlignment="center"
        android:textSize="19sp"
        android:padding="12dp"
        />


</LinearLayout>