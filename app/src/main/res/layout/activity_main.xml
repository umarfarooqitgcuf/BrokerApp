<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main_layout_background"
    android:background="@drawable/splash_image"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To BrokerApp"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/ralewaylight"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_login_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAllCaps="false"
        android:fontFamily="@font/ralewaylight"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_above="@+id/btn_create_account_activity"
        android:background="@drawable/styleb"
        android:textSize="18sp"
        android:textColor="#fff"
        android:text="Sign In"
        />

    <TextView
        android:id="@+id/btn_create_account_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/ralewaylight"
        android:layout_marginLeft="15dp"
        android:layout_gravity="bottom"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text=" New Account?"
        android:textAlignment="center"
        android:textSize="19sp"
        android:padding="12dp"
        />

</RelativeLayout>