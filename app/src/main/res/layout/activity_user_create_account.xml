<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".UserCreateAccountActivity"
    android:background="@drawable/splash_image"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/create_account_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:onClick="CircleImage"
                android:src="@drawable/profile" />


            <EditText
                android:id="@+id/create_account_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_account_image"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/styleb"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="10dp"
                android:fontFamily="@font/ralewaylight"
                android:hint="Enter Name"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/create_account_father_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_account_image"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/styleb"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="10dp"
                android:fontFamily="@font/ralewaylight"
                android:hint="Enter Father Name"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/create_account_cnic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_account_Name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/styleb"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="10dp"
                android:fontFamily="@font/ralewaylight"
                android:hint="Enter Your CNIC"
                android:inputType="numberSigned"
                android:paddingLeft="8dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/create_account_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_account_cnic"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/styleb"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="10dp"
                android:fontFamily="@font/ralewaylight"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/create_account_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_account_cnic"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/styleb"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="10dp"
                android:fontFamily="@font/ralewaylight"
                android:hint="Enter Your Occupation"
                android:paddingLeft="8dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/relative_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_account_email"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/create_account_user_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/styleb"
                    android:drawableLeft="@drawable/lock_create_page"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/ralewaylight"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:paddingLeft="7dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eye_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/eye1" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_layout_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_layout_password"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/create_account_user_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/styleb"
                    android:drawableLeft="@drawable/lock_create_page"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/ralewaylight"
                    android:hint="Re-Enter Password"
                    android:inputType="textPassword"
                    android:paddingLeft="7dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eye_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/eye1" />

            </RelativeLayout>

            <EditText
                android:id="@+id/create_account_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_layout_confirm_password"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/styleb"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="10dp"
                android:fontFamily="@font/ralewaylight"
                android:hint="Phone number"
                android:inputType="number"
                android:paddingLeft="8dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/create_account_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_account_address"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/styleb"
                android:drawableLeft="@drawable/address"
                android:drawablePadding="10dp"
                android:fontFamily="@font/ralewaylight"
                android:hint="Enter Your Current Address"
                android:inputType="textPostalAddress"
                android:paddingLeft="8dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/create_account_permanent_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_account_address"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/styleb"
                android:drawableLeft="@drawable/address"
                android:drawablePadding="10dp"
                android:fontFamily="@font/ralewaylight"
                android:hint="Enter Your Permanent Address"
                android:inputType="textPostalAddress"
                android:paddingLeft="8dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_account_number"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/styleyellow"
                android:fontFamily="@font/ralewaylight"
                android:text="Register"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
