<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:background="#fff"
    android:clickable="true"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ralewaylight"
                android:text="User Profile "
                android:visibility="gone"
                android:id="@+id/text"
                android:layout_below="@id/user_image"
                android:textColor="#0a224b"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:id="@+id/layout"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/ralewaylight"
                    android:text="Name  "
                    android:textColor="@color/ProfileTextColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/icon_person_green"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:inputType="textPersonName"
                    android:textColor="#0a224b"
                    android:textSize="16sp"
                    android:hint="Enter Name"
                    android:fontFamily="@font/ralewaylight"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:orientation="vertical"
                android:id="@+id/layout1"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ralewaylight"
                    android:text="Email  "
                    android:textColor="@color/ProfileTextColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="textEmailAddress"
                    android:textColor="#0a224b"
                    android:drawableLeft="@drawable/mail_box"
                    android:drawablePadding="10dp"
                    android:hint="Enter Email"
                    android:textSize="16sp"
                    android:fontFamily="@font/ralewaylight"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_below="@+id/layout1"
                android:id="@+id/layout2"
                >

                <TextView
                    android:id="@+id/mob_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ralewaylight"
                    android:text="Phone "
                    android:textColor="@color/ProfileTextColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user_mob_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="textPersonName"
                    android:drawableLeft="@drawable/phone_icon"
                    android:drawablePadding="10dp"
                    android:textColor="#0a224b"
                    android:textSize="16sp"
                    android:hint="Enter Mobile Number"
                    android:fontFamily="@font/ralewaylight"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layout2"
                android:orientation="vertical"
                android:id="@+id/layout4"

                >

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ralewaylight"
                    android:text="Address  "
                    android:textColor="@color/ProfileTextColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="textPersonName"
                    android:drawableLeft="@drawable/icon_address_green"
                    android:drawablePadding="10dp"
                    android:textColor="#0a224b"
                    android:textSize="16sp"
                    android:hint="Enter Address"
                    android:fontFamily="@font/ralewaylight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_below="@+id/layout4"
                android:id="@+id/layout3">


                <TextView
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:textSize="18sp"
                    android:text="Change Password"
                    android:textColor="@color/ProfileTextColor"
                    android:fontFamily="@font/ralewaylight"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/userprofile_reset_password"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:text="Logout"
                    android:textColor="@color/ProfileTextColor"
                    android:fontFamily="@font/ralewaylight"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/icon_logout"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@id/btnChangePassword"/>


                <!-- <EditText
                     android:id="@+id/user_City"
                     android:layout_width="0dp"
                     android:layout_weight="0.75"
                     android:layout_height="wrap_content"
                     android:layout_below="@+id/create_user_mob_number"
                     android:layout_marginLeft="5dp"
                     android:layout_marginTop="5dp"
                     android:layout_marginRight="5dp"
                     android:layout_marginBottom="10dp"
                     android:drawablePadding="10dp"
                     android:fontFamily="@font/ralewaylight"
                     android:inputType="text"
                     android:textColor="#595858"
                     android:textSize="20dp"
                     tools:ignore="Deprecated" />-->
            </LinearLayout>


            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Update Profile"
                android:fontFamily="@font/ralewaylight"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:layout_below="@+id/layout3"
                android:background="@drawable/styleyellow"
                android:paddingRight="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#fff"
                />

        </RelativeLayout>
    </ScrollView>


</LinearLayout>