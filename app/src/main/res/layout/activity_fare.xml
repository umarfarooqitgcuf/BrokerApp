<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FareActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/fare_app_bar">
    </include>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:id="@+id/cardview_fare"
        android:layout_below="@+id/fare_app_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/fare_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/styleyellow">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fare_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Service Charges"
                    android:layout_weight="1.8"
                    android:textAllCaps="false"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:fontFamily="@font/ralewaylight"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/price_text"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:text="70"
                    android:fontFamily="@font/ralewaylight"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fare_colectable"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/styleyellow">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fare_text2"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:text="Collect amount"
                    android:textAllCaps="false"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:fontFamily="@font/ralewaylight"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/price_collectable"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:text="70"
                    android:fontFamily="@font/ralewaylight"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/customer_name_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_centerInParent="true"
                    >


                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:text="Customer Nmae"
                    android:textAllCaps="false"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:fontFamily="@font/ralewaylight"
                    android:textStyle="bold"
                    android:textColor="#5c5b5b"
                    />
                <TextView
                    android:id="@+id/name_rider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_weight="0.9"
                    android:layout_toRightOf="@+id/customer_name"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:text="nabeel"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/ralewaylight"
                    android:textColor="#0d0868"
                    />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_Collect_Amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:fontFamily="@font/ralewaylight"
        android:background="@drawable/styleyellow"
        android:text="Collect Amount"
        android:textColor="#fff"
        />



</RelativeLayout>