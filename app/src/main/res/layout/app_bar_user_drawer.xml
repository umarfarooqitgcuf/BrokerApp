<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UserDrawerActivity"
    >


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="0.1"
            android:src="@drawable/manu"
            />

        <TextView
            android:id="@+id/text_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.8"
            android:elevation="3dp"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_semi_bold"
            android:shadowColor="#DFDCDC"
            android:text="Home"
            android:textColor="#FDFCFC"
            android:textSize="22sp" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear">

        <include layout="@layout/content_user_drawer" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/drawer_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/toolbar_shadow"
                android:elevation="2dp"
                android:outlineSpotShadowColor="@color/colorPrimaryDark">

                <LinearLayout
                    android:id="@+id/layoutPickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableLeft="@drawable/pick_drop"
                        android:drawableRight="@drawable/location"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/ralewaylight"
                        android:paddingBottom="5dp"
                        android:text="User Current Location"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/layoutPickup"
                    android:layout_marginTop="5dp"
                    android:background="#47a9f5" />


                <LinearLayout
                    android:id="@+id/dropLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/drop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view1"
                        android:clickable="true"
                        android:drawableLeft="@drawable/pick_drop"
                        android:drawableRight="@drawable/location"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/ralewaylight"
                        android:paddingTop="0dp"
                        android:text="User Drop Location"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
            <ImageView
                android:id="@+id/myLocationCustomButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:backgroundTint="@android:color/white"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/my_location"
                android:layout_above="@+id/layout"
                android:layout_alignParentRight="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/layout"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnConfirmPickUp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="6.5dp"
                    android:background="@drawable/chalo_btn_background"
                    android:fontFamily="@font/ralewaylight"
                    android:text="Send Request"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:visibility="visible" />

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
