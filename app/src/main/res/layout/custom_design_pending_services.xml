<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/history_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">


            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/icon_order_status"
                android:drawablePadding="10dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Status:"
                android:layout_marginTop="5dp"
                android:textColor="@color/CustomDesignTextColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/status_text"
                android:fontFamily="@font/ralewaylight"
                android:text="status"
                android:textColor="#494949"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_place"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/time_icon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Date | Time:"
                android:textColor="@color/CustomDesignTextColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_order_date_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_place"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/history_order_date"
                android:text="Name:"
                android:textColor="#494949"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/history_order_date_place"
                android:layout_below="@+id/status_place"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="10dp"
                android:text="|"
                android:fontFamily="@font/raleway_bold"
                android:textColor="@color/CustomDesignTextColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_order_time_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_place"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/history_order_time"
                android:text="Name:"
                android:textColor="#494949"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_user_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_order_time_place"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/icon_person_green"
                android:drawablePadding="10dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Name:"
                android:textColor="@color/CustomDesignTextColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_user_name_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_order_time_place"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/history_user_txt_name"
                android:fontFamily="@font/ralewaylight"
                android:text="Name:"
                android:textColor="#494949"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_user_name_place"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="10dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Address:"
                android:textColor="@color/CustomDesignTextColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_user_name_place"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/order_address_text"
                android:fontFamily="@font/ralewaylight"
                android:text="Address Of the user Address Of the user  "
                android:textColor="#494949"
                android:textSize="14sp"
                android:textStyle="bold" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>